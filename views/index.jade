extends layout

block body
  div(ng-controller='AppCtrl')
    ul.menu
      li
        a.btn.btn-primary(href='view1') view1
      li
        a.btn.btn-primary(href='view2') view2
    
    div.login      
      ul.login_actions
        li(ng-show='!details.isAuthenticated')
          a.btn.btn-warning(href='signup') הרשם
        li(ng-show='!details.isAuthenticated')
          a.btn.btn-success(href='login') התחבר
        li(ng-show='details.isAuthenticated')
          button.btn.btn-danger(type='button',ng-click='logout()') התנתק
      span.user_name(ng-show='details.isAuthenticated') מחובר: {{details.name}}

    div(ng-view)

  script(src='js/lib/jquery/jquery-2.1.1.js')
  script(src='js/lib/bootstrap/bootstrap.js')
  
  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/angular-resource.js')
  script(src='js/lib/angular/angular-route.js')

  script(src='js/addons/moment-with-langs.min.js')
  script(src='js/addons/datetimepicker.js')
  script(src='js/addons/ui-bootstrap-tpls-0.10.0.js')  


  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')

  link(href='css/bootstrap.min.css',rel='stylesheet')
  link(href='css/bootstrap-theme.min.css',rel='stylesheet')  
  link(href='css/datetimepicker.css',rel='stylesheet')
  link(href='css/app.css ', rel='stylesheet')